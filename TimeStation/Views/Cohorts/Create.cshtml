@model TimeStation.Models.Cohort

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Create A New Cohort</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <hr />

    <div class="form-horizontal" style="margin-left: 5%; margin-bottom: 5%;">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(model => model.CohortId)
            @Html.TextBoxFor(model => model.CohortId, new { @class = "form-control", placeholder = "ex: 2018_08_JSSS_IN001" })
            @Html.ValidationMessageFor(model => model.CohortId)
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.CohortName)
            @Html.TextBoxFor(model => model.CohortName, new { @class = "form-control", placeholder = "ex: JavaScript August 2018" })
            @Html.ValidationMessageFor(model => model.CohortName)
        </div>

        <div class="form-group">
            <input type="submit" value="Create" class="btn btn-default" />
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
